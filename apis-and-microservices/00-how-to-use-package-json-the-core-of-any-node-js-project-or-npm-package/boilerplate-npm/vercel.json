{
  "version": 2,
  "builds": [
      {
          "src": "./server.js",
          "use": "@vercel/node"
      },
      {
          "src": "./public/**",
          "use": "@vercel/static"
      }
  ],
  "routes": [
      {
          "src": "/", 
          "dest": "/views/index.html"
      },
      { 
          "src": "/(.+js|.+css|.+png|.+ico|robots.txt)", 
          "dest": "/public/$1"
      },
      {
          "src": "/(.*)",
          "dest": "/server.js"
      }
  ]
}